<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    android:background="?android:colorPrimary"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toutes les wars en Ã©quipe"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/harmonia_dark"
        android:fontFamily="@font/montserrat_bold"/>


    <EditText
        android:layout_width="match_parent"
        android:background="@drawable/rounded_bg"
        android:hint="Rechercher un advsersaire..."
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white_alphaed"
        android:padding="15dp"
        android:layout_marginVertical="10dp"
        android:id="@+id/search_et"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="5dp"
        android:background="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/harmonia_dark"
        android:text="Options de tri" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_sort_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_bg"
                    android:paddingVertical="5dp"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Date"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/team_sort_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_bg"
                    android:layout_margin="5dp"
                    android:paddingVertical="5dp"
                    android:text="Adversaire"
                    android:fontFamily="@font/montserrat_regular"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/score_sort_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_bg"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingVertical="5dp"
                    android:text="Score/Diff"
                    android:textAlignment="center" />





    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/war_rv"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</LinearLayout>