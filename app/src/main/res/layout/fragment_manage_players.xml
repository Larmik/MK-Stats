<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="?android:colorPrimary"
    android:padding="15dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/manage_players_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white" />


    <EditText
        android:layout_width="match_parent"
        android:background="@drawable/rounded_bg"
        android:hint="Rechercher un joueur..."
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white_alphaed"
        android:padding="15dp"
        android:layout_marginVertical="10dp"
        android:id="@+id/search_et"/>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:text="L'encoche à gauche du nom signifie que le joueur possède un compte sur l'application. \n Vous pouvez éditer votre profil et gérer les joueurs sans compte (si vous en avez le droit)."
        android:textSize="13sp"
        android:gravity="center"
        android:fontFamily="@font/montserrat_regular"            android:textColor="@color/white"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:textColor="@color/white"
        android:paddingVertical="10dp"
        android:textSize="14sp"
        android:gravity="center"
        android:id="@+id/add_player_btn"
        android:text="Ajouter un joueur"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="?android:colorAccent"
        tools:targetApi="n_mr1"/>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="10dp"
        android:background="@color/white"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/players_rv"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"/>


</LinearLayout>