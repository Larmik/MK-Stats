<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:colorPrimary"
    android:id="@+id/main_war_layout"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:textColor="@color/harmonia_dark"
            android:text="Statistiques des adversaires"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"/>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:layout_below="@id/title"
            android:progressTint="?android:colorAccent"
            tools:targetApi="n_mr1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/title"
            tools:visibility="visible"
            android:visibility="gone"
            android:id="@+id/main_layout">
            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/rounded_bg"
                android:hint="Rechercher un adversaire..."
                android:textColor="@color/black"
                android:textColorHint="@color/boo"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/search_et"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/indiv_btn"
                    android:layout_weight="1"
                    android:paddingVertical="10dp"
                    android:textColor="@color/harmonia_dark"
                    android:fontFamily="@font/roboto"
                    android:textAlignment="center"
                    android:text="Individuel"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:paddingVertical="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/harmonia_dark"
                    android:id="@+id/team_btn"
                    android:textAlignment="center"
                    android:text="Equipe"/>

            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="5dp"
                android:background="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/harmonia_dark"
                android:text="Options de tri" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name_sort_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_bg"
                            android:paddingVertical="5dp"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Nom"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/total_win_sort_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_bg"
                            android:layout_margin="5dp"
                            android:paddingVertical="5dp"
                            android:text="Wars jouÃ©es"
                            android:fontFamily="@font/montserrat_regular"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/winrate_sort_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_bg"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:paddingVertical="5dp"
                            android:text="Winrate"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/avg_diff_sort_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_bg"
                            android:paddingVertical="5dp"
                            android:layout_margin="5dp"
                            android:text="Score moyen"
                            android:fontFamily="@font/montserrat_regular"
                            android:textAlignment="center" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/most_played_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:paddingHorizontal="10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical" />

        </LinearLayout>
    </RelativeLayout>






</LinearLayout>