<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/waluigi"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:id="@+id/logout_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:text="Statistiques circuit"
            android:gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/white"/>

        <fr.harmoniamk.statsmk.ui.TrackView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stat_trackview"
            android:layout_marginBottom="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/empty_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                tools:visibility="gone"
                android:fontFamily="@font/montserrat_regular"
                android:text="Le circuit n'a jamais été joué. Revenez ici après l'avoir joué au moins une fois pour consulter ses statistiques."
                android:textColor="@color/white"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:text="Wars en équipe"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_bg"
                    android:backgroundTint="@color/waluigi_second"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:text="Jouée"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:text="Gagnée"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:text="Win rate"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:fontFamily="@font/orbitron_semibold"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:id="@+id/map_played"
                            android:paddingBottom="5dp"
                            tools:text="73"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:fontFamily="@font/orbitron_semibold"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:id="@+id/map_won"
                            android:paddingBottom="5dp"
                            tools:text="53"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:fontFamily="@font/orbitron_semibold"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:id="@+id/winrate"
                            android:paddingBottom="5dp"
                            tools:text="72%"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_bg"
                    android:backgroundTint="@color/waluigi_second"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Score moyen"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="16sp"
                        android:paddingVertical="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="16sp"
                            android:paddingTop="5dp"
                            android:text="Equipe"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:text="Joueur"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:fontFamily="@font/orbitron_semibold"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:id="@+id/map_team_average"
                            android:paddingBottom="5dp"
                            tools:text="60"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:fontFamily="@font/orbitron_semibold"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:id="@+id/map_player_average"
                            android:paddingBottom="5dp"
                            tools:text="106"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="16sp"
                            android:paddingVertical="5dp"
                            android:text="Plus large victoire"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                                <fr.harmoniamk.statsmk.ui.WarItemView
                                    android:id="@+id/highest_victory"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="5dp"
                                    android:visibility="invisible"
                                    app:win="true"
                                    app:vertical="true"/>

                            <TextView
                                android:id="@+id/no_victory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginHorizontal="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserrat_regular"
                                android:gravity="center"
                                android:text="Aucune"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                        </RelativeLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="16sp"
                            android:paddingVertical="5dp"
                            android:text="Plus lourde défaite"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                                <fr.harmoniamk.statsmk.ui.WarItemView
                                    android:id="@+id/loudest_Defeat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="5dp"
                                    android:visibility="invisible"
                                    app:win="false"
                                    app:vertical="true"/>

                            <TextView
                                android:id="@+id/no_defeat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:fontFamily="@font/montserrat_regular"
                                android:gravity="center"
                                android:layout_centerInParent="true"
                                android:text="Aucune"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                        </RelativeLayout>



                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="Détails"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/white"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/map_details_rv"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="vertical"/>

            </LinearLayout>

        </RelativeLayout>




    </LinearLayout>

</ScrollView>
