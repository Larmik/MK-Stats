<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/logout_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/harmonia_dark"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="16sp"
            android:id="@+id/indiv_stats"
            android:paddingVertical="15dp"
            android:text="Statistiques individuelles"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/harmonia_dark"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="16sp"
            android:id="@+id/team_stats"
            android:paddingVertical="15dp"
            android:text="Statistiques de l'Ã©quipe"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/harmonia_dark"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="16sp"
            android:id="@+id/map_stats"
            android:paddingVertical="15dp"
            android:text="Statistiques des circuits"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

    </LinearLayout>

    <TextView
        android:id="@+id/current_user_label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/text_color"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="bottom|end"/>


</LinearLayout>