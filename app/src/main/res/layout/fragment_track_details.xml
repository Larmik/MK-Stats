<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?android:colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        tools:text="HR - OF\nCourse 3/12"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"/>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/track_view"/>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/score_layout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingVertical="10dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="Score :"/>

        <TextView
            android:id="@+id/track_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:fontFamily="@font/orbitron_semibold"
            tools:text="58 - 24"/>
        <TextView
            android:id="@+id/track_diff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/orbitron_semibold"
            tools:text="+34"/>

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingVertical="15dp"
        android:text="Positions de l'Ã©quipe :"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/result_rv"
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="15dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="?android:colorAccent"
        tools:targetApi="n_mr1"
        android:fontFamily="@font/montserrat_bold"
        android:text="Editer le circuit"
        android:visibility="gone"
        android:id="@+id/edit_track_btn"
        android:textColor="@color/white"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="?android:colorAccent"
        tools:targetApi="n_mr1"
        android:fontFamily="@font/montserrat_bold"
        android:text="Ressaisir les positions"
        android:visibility="gone"
        android:id="@+id/reset_positions_btn"
        android:textColor="@color/white"
        android:gravity="center"/>


</LinearLayout>