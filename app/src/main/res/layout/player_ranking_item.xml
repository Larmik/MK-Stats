<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/rounded_bg"
    android:backgroundTint="@color/white_alphaed"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/player_iv"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="15dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_bold"
        android:layout_height="wrap_content"
        tools:text="Always"
        android:id="@+id/player_name"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wars jouÃ©es:"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Winrate:"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score moyen:"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"/>


        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="82"
                android:textSize="12sp"
                android:layout_marginBottom="6dp"
                android:textColor="@color/black"
                android:fontFamily="@font/orbitron_semibold"
                android:id="@+id/player_ranking_wars_played"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:fontFamily="@font/orbitron_semibold"
                tools:text="68%"
                android:layout_marginBottom="6dp"
                android:id="@+id/player_ranking_winrate"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="90"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/orbitron_semibold"
                android:id="@+id/player_ranking_average"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>