<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/waluigi"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:id="@+id/logout_layout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:text="Statistiques individuelles"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:text="Wars en équipe"
                android:gravity="center"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_bg"
                android:backgroundTint="@color/waluigi_second"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="Wars jouées"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="Wars gagnées"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="Win rate"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:fontFamily="@font/orbitron_semibold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:id="@+id/war_played"
                        android:paddingBottom="5dp"
                        tools:text="73"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:fontFamily="@font/orbitron_semibold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:id="@+id/wars_won"
                        android:paddingBottom="5dp"
                        tools:text="53"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:fontFamily="@font/orbitron_semibold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:id="@+id/winrate"
                        android:paddingBottom="5dp"
                        tools:text="72%"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_bg"
                android:backgroundTint="@color/waluigi_second"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Equipe la plus jouée"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/white"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="16sp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="20dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="@color/waluigi"
                    android:paddingVertical="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="5dp"
                        android:background="@drawable/rounded_bg"
                        android:backgroundTint="@color/white_alphaed">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/most_played_team"
                            android:textColor="@color/waluigi_second"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            tools:text="Revival"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/most_played_team_total"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            tools:text="14 matchs joués"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_bg"
                android:backgroundTint="@color/waluigi_second"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="16sp"
                        android:paddingTop="5dp"
                        android:text="Pire score"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="Meilleur score"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:fontFamily="@font/orbitron_semibold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:id="@+id/lowest_score"
                        android:paddingBottom="5dp"
                        tools:text="41"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:fontFamily="@font/orbitron_semibold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:id="@+id/highest_score"
                        android:paddingBottom="5dp"
                        tools:text="106"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:id="@+id/lowest_score_war_name"
                        tools:text="vs XX"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:id="@+id/highest_score_war_name"
                        tools:text="vs OF"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:id="@+id/lowest_score_war_date"
                        android:paddingBottom="5dp"
                        tools:text="18/07/2021 - 22h"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:id="@+id/highest_score_war_date"
                        android:paddingBottom="5dp"
                        tools:text="18/07/2021 - 22h"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_bg"
                android:backgroundTint="@color/waluigi_second"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="16sp"
                        android:paddingTop="5dp"
                        android:text="Score moyen"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="Moyenne pts/map"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:fontFamily="@font/orbitron_semibold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:id="@+id/total_average"
                        android:paddingBottom="5dp"
                        tools:text="60"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:fontFamily="@font/orbitron_semibold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:id="@+id/map_average"
                        android:paddingBottom="5dp"
                        tools:text="106"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:layout_marginBottom="10dp"
                android:paddingHorizontal="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="16sp"
                        android:paddingTop="5dp"
                        android:text="Plus large victoire"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="Plus lourde défaite"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <fr.harmoniamk.statsmk.ui.WarItemView
                        android:id="@+id/highest_victory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"
                        app:win="true"
                        app:vertical="true"/>

                    <fr.harmoniamk.statsmk.ui.WarItemView
                        android:id="@+id/highest_defeat"
                        android:layout_width="0dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:win="false"
                        app:vertical="true"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Circuits"
                android:gravity="center"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="16sp"
                        android:paddingTop="5dp"
                        android:text="Pire circuit"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="Meilleur circuit"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <fr.harmoniamk.statsmk.ui.TrackView
                        android:id="@+id/worst_trackview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"
                        app:collapsed="true"/>

                    <fr.harmoniamk.statsmk.ui.TrackView
                        android:id="@+id/best_trackview"
                        android:layout_width="0dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:collapsed="true"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="16sp"
                        android:text="Le plus joué"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="Le moins joué"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <fr.harmoniamk.statsmk.ui.TrackView
                        android:id="@+id/most_played_trackview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"
                        app:collapsed="true"/>

                    <fr.harmoniamk.statsmk.ui.TrackView
                        android:id="@+id/less_played_trackview"
                        android:layout_width="0dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:collapsed="true"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

</ScrollView>
