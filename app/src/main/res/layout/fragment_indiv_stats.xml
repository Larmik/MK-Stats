<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:orientation="vertical"
    android:background="@color/waluigi"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/logout_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:text="Wars en équipe"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_bg"
            android:backgroundTint="@color/waluigi_second"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:text="Wars jouées"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:text="Wars gagnées"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:text="Win rate"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:fontFamily="@font/orbitron_semibold"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:id="@+id/war_played"
                    android:paddingBottom="15dp"
                    tools:text="73"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:fontFamily="@font/orbitron_semibold"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:id="@+id/wars_won"
                    android:paddingBottom="15dp"
                    tools:text="53"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:fontFamily="@font/orbitron_semibold"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:id="@+id/winrate"
                    android:paddingBottom="15dp"
                    tools:text="72%"/>

            </LinearLayout>

        </LinearLayout>

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bg"
            android:backgroundTint="@color/waluigi_second"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="16sp"
                    android:paddingTop="15dp"
                    android:text="Pire score"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="16sp"
                    android:paddingTop="15dp"
                    android:text="Score moyen"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:text="Meilleur score"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:fontFamily="@font/orbitron_semibold"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:id="@+id/lowest_score"
                    android:paddingBottom="15dp"
                    tools:text="41"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:fontFamily="@font/orbitron_semibold"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:id="@+id/total_average"
                    android:paddingBottom="15dp"
                    tools:text="60"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:fontFamily="@font/orbitron_semibold"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:id="@+id/highest_score"
                    android:paddingBottom="15dp"
                    tools:text="106"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="16sp"
                    android:paddingTop="15dp"
                    android:text="Pire circuit"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:text="Meilleur circuit"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <fr.harmoniamk.statsmk.ui.TrackView
                    android:id="@+id/worst_trackview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    app:collapsed="true"/>

                <fr.harmoniamk.statsmk.ui.TrackView
                    android:id="@+id/best_trackview"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:collapsed="true"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bg"
            android:backgroundTint="@color/waluigi_second"
            android:paddingBottom="15dp"
            android:paddingHorizontal="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="16sp"
                    android:paddingTop="15dp"
                    android:text="Plus large victoire"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:text="Plus lourde défaite"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <fr.harmoniamk.statsmk.ui.WarItemView
                    android:id="@+id/highest_victory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    app:vertical="true"/>

                <fr.harmoniamk.statsmk.ui.WarItemView
                    android:id="@+id/highest_defeat"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:vertical="true"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/current_user_label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="bottom|end"/>

</LinearLayout>