<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="?android:colorPrimary"
    android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Statistiques circuit"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/harmonia_dark"/>

        <fr.harmoniamk.statsmk.ui.TrackView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stat_trackview"
            android:layout_marginBottom="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@color/harmonia_dark"
                            android:text="Options de tri" />

                        <TextView
                            android:id="@+id/date_sort_button"
                            android:layout_width="match_parent"
                            android:layout_marginVertical="10dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/transparent_white"
                            android:textColor="@color/harmonia_dark"
                            android:background="@drawable/rounded_bg"
                            android:paddingVertical="5dp"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Date"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/team_sort_button"
                            android:layout_width="match_parent"
                            android:layout_marginVertical="10dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/transparent_white"
                            android:textColor="@color/harmonia_dark"
                            android:background="@drawable/rounded_bg"
                            android:layout_margin="5dp"
                            android:paddingVertical="5dp"
                            android:text="Adversaire"
                            android:fontFamily="@font/montserrat_regular"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/score_sort_button"
                            android:layout_width="match_parent"
                            android:layout_marginVertical="10dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_bg"
                            android:backgroundTint="@color/transparent_white"
                            android:textColor="@color/harmonia_dark"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:paddingVertical="5dp"
                            android:text="Score/Diff"
                            android:textAlignment="center" />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@color/harmonia_dark"
                            android:text="Filtrer" />

                        <TextView
                            android:id="@+id/period_filter_button"
                            android:layout_width="match_parent"
                            android:layout_marginVertical="10dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_bg"
                            android:backgroundTint="@color/transparent_white"
                            android:textColor="@color/harmonia_dark"
                            android:paddingVertical="5dp"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Cette semaine"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/official_filter_button"
                            android:layout_width="match_parent"
                            android:layout_marginVertical="10dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_bg"
                            android:backgroundTint="@color/transparent_white"
                            android:textColor="@color/harmonia_dark"
                            android:layout_margin="5dp"
                            android:paddingVertical="5dp"
                            android:text="Officielles"
                            android:fontFamily="@font/montserrat_regular"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/play_filter_button"
                            android:layout_width="match_parent"
                            android:layout_marginVertical="10dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_bg"
                            android:backgroundTint="@color/transparent_white"
                            android:textColor="@color/harmonia_dark"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:paddingVertical="5dp"
                            android:text="Participation"
                            android:textAlignment="center" />

                </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DÃ©tails"
            android:gravity="center"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/harmonia_dark"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/map_details_rv"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"/>

    </LinearLayout>





