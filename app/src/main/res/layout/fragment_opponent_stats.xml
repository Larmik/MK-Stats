<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?android:colorPrimary"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_layout"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="Statistiques de l'équipe"
                android:textColor="@color/harmonia_dark"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/player_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                tools:text="Bronze Fang"
                android:textColor="@color/harmonia_dark"
                android:textSize="18sp" />
        </LinearLayout>




        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:progressTint="?android:colorAccent"
            tools:targetApi="n_mr1"
            android:visibility="gone"
            android:layout_below="@id/title_layout"
            android:indeterminate="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/title_layout"
            android:visibility="visible"
            tools:visibility="visible"
            android:paddingHorizontal="15dp"
            android:id="@+id/main_layout">



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"/>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="vertical">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="@color/harmonia_dark"
                            android:fontFamily="@font/orbitron_semibold"
                            android:textSize="26sp"
                            android:gravity="center"
                            android:id="@+id/war_played"
                            tools:text="73"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="@color/harmonia_dark"
                            android:fontFamily="@font/orbitron_semibold"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:text="wars jouées"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:paddingBottom="10dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/rounded_bg"
                            android:backgroundTint="@color/transparent_white"
                            tools:targetApi="n_mr1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/harmonia_dark"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:textSize="14sp"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:text="V"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/harmonia_dark"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:textSize="14sp"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:text="N"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/harmonia_dark"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:textSize="14sp"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:text="D"/>

                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/harmonia_dark"
                                    android:fontFamily="@font/orbitron_semibold"
                                    android:textSize="20sp"
                                    android:gravity="center"
                                    android:id="@+id/win_text"
                                    android:paddingBottom="5dp"
                                    tools:text="43"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/harmonia_dark"
                                    android:fontFamily="@font/orbitron_semibold"
                                    android:textSize="20sp"
                                    android:gravity="center"
                                    android:id="@+id/tie_text"
                                    android:paddingBottom="5dp"
                                    tools:text="2"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/harmonia_dark"
                                    android:fontFamily="@font/orbitron_semibold"
                                    android:textSize="20sp"
                                    android:gravity="center"
                                    android:id="@+id/lose_text"
                                    android:paddingBottom="5dp"
                                    tools:text="28"/>

                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>



                </LinearLayout>

                <fr.harmoniamk.statsmk.ui.PieChart
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/piechart"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingVertical="5dp"
                android:background="@drawable/rounded_bg"
                android:backgroundTint="@color/transparent_white"
                tools:targetApi="n_mr1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/harmonia_dark"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="13sp"
                        android:text="Moyenne war"/>

                    <TextView
                        android:id="@+id/map_average_label"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:autoSizeTextType="uniform"
                        android:maxLines="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/harmonia_dark"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:text="Moyenne map"
                        tools:targetApi="o" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/orbitron_semibold"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:id="@+id/total_average"
                        tools:text="60"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/orbitron_semibold"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:id="@+id/map_average"
                        tools:text="106"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">



                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/harmonia_dark"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:text="Maps gagnées"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/harmonia_dark"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:text="Shocks rapportés"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:fontFamily="@font/orbitron_semibold"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:id="@+id/maps_won"
                        tools:text="98 / 144"/>

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/shock"
                            android:layout_marginEnd="2dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_marginStart="2dp"
                            android:fontFamily="@font/mk_position"
                            android:textSize="26sp"
                            android:gravity="center"
                            android:id="@+id/shock_count"
                            android:paddingBottom="5dp"
                            tools:text="24"/>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:id="@+id/player_scores_layout"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/lowest_score_layout"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/harmonia_dark"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="14sp"
                        android:paddingTop="5dp"
                        android:text="Pire score"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lose"
                        android:fontFamily="@font/orbitron_semibold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:id="@+id/lowest_score"
                        android:paddingBottom="5dp"
                        tools:text="41"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/harmonia_dark"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:id="@+id/lowest_score_war_date"
                        android:paddingBottom="5dp"
                        tools:text="18/07/2021 - 22h"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/highest_score_layout"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/harmonia_dark"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="Meilleur score"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green"
                        android:fontFamily="@font/orbitron_semibold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:id="@+id/highest_score"
                        android:paddingBottom="5dp"
                        tools:text="106"/>





                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/harmonia_dark"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:id="@+id/highest_score_war_date"
                        android:paddingBottom="5dp"
                        tools:text="18/07/2021 - 22h"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_bg"
                android:backgroundTint="@color/harmonia_dark"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/highest_victory_layout"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="14sp"
                        android:paddingTop="5dp"
                        android:text="Plus large victoire"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/no_victory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center"
                        android:text="Aucune"
                        android:textColor="@color/text_color"
                        android:textSize="16sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:id="@+id/victory_layout"
                        android:visibility="invisible"
                        android:background="@drawable/rounded_bg"
                        android:backgroundTint="@color/win_alphaed"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:fontFamily="@font/orbitron_semibold"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:id="@+id/highest_victory"
                            android:paddingBottom="5dp"
                            tools:text="41"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/harmonia_dark"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:id="@+id/highest_victory_war_date"
                            android:paddingBottom="5dp"
                            tools:text="18/07/2021 - 22h"/>

                    </LinearLayout>
                    </RelativeLayout>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/loudest_defeat_layout"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="Plus lourde défaite"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/no_defeat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center"
                        android:text="Aucune"
                        android:textColor="@color/text_color"
                        android:textSize="16sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:visibility="invisible"
                        android:id="@+id/defeat_layout"
                        android:background="@drawable/rounded_bg"
                        android:backgroundTint="@color/lose_alphaed">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:fontFamily="@font/orbitron_semibold"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:id="@+id/loudest_defeat"
                            android:paddingBottom="5dp"
                            tools:text="106"/>





                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:id="@+id/loudest_defeat_war_date"
                            android:paddingBottom="5dp"
                            tools:text="18/07/2021 - 22h"/>



                    </LinearLayout>
                    </RelativeLayout>




                </LinearLayout>

            </LinearLayout>





            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_bg"
                android:backgroundTint="@color/transparent_white"
                android:orientation="vertical"
                android:layout_marginVertical="15dp"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="Circuit le plus joué"
                        android:textColor="@color/harmonia_dark"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">


                    <fr.harmoniamk.statsmk.ui.TrackView
                        android:id="@+id/most_played_trackview"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        app:collapsed="true" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="Meilleur circuit"
                        android:textColor="@color/harmonia_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="Pire circuit"
                        android:textColor="@color/harmonia_dark"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <fr.harmoniamk.statsmk.ui.TrackView
                        android:id="@+id/best_trackview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"
                        app:collapsed="true" />

                    <fr.harmoniamk.statsmk.ui.TrackView
                        android:id="@+id/worst_trackview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"
                        app:collapsed="true" />


                </LinearLayout>


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voir le détail"
                android:gravity="center"
                android:textSize="14sp"
                android:paddingVertical="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/show_details_btn"
                android:fontFamily="@font/montserrat_bold"
                android:background="@drawable/rounded_bg"
                android:backgroundTint="@color/harmonia_dark"
                android:textColor="@color/white"/>



        </LinearLayout>

    </RelativeLayout>



</ScrollView>
