<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="15dp"
    android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/harmonia_dark"
            android:textSize="16sp"
            android:text="Ajouter un joueur"
            android:layout_marginBottom="15dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/rounded_bg"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:id="@+id/playername_et"
            android:hint="Nom"
            android:textColor="@color/black"
            android:textColorHint="@color/boo"
            android:backgroundTint="@color/white_alphaed"
            android:layout_marginHorizontal="40dp" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_to_team_check"
        android:text="Intégrer ce joueur à l'équipe"
        android:textColor="@color/harmonia_dark"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:layout_gravity="center"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:background="@drawable/rounded_bg"
            android:backgroundTint="?android:colorAccent"
            tools:targetApi="n_mr1"
            android:textColor="@color/text_color"
            android:layout_marginVertical="10dp"
            android:id="@+id/next_btn"
            android:textSize="18sp"
            android:text="Suivant"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_gravity="bottom"/>


</LinearLayout>