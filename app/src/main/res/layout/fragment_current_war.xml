<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?android:colorPrimary"
    android:padding="15dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/war_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        tools:text="HR vs OF"
        android:textSize="24sp"
        android:fontFamily="@font/orbitron_semibold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/war_date_tv"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_regular"
            tools:text="26/01/2022 - 22h"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/current_war_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_regular"
            android:text="Tournoi en cours (8/12)"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white"
                android:text="Joueurs :"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player1"
                        tools:text="Akioze"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player2"
                        android:fontFamily="@font/montserrat_regular"
                        tools:text="Skyoshi"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player3"
                        android:fontFamily="@font/montserrat_regular"
                        tools:text="Cami"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player4"
                        android:fontFamily="@font/montserrat_regular"
                        tools:text="Lari"            android:textColor="@color/white"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:id="@+id/player5"
                        tools:text="Guyal"            android:textColor="@color/white"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_height="wrap_content"
                        android:id="@+id/player6"
                        tools:text="nsdive"            android:textColor="@color/white"
                        />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white"
                android:text="Score :"/>

            <TextView
                android:id="@+id/score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:maxLines="1"
                android:autoSizeTextType="uniform"
                android:textSize="28sp"
                android:fontFamily="@font/orbitron_semibold"
                tools:text="229 - 190"
                tools:targetApi="o" />
            <TextView
                android:id="@+id/diff_score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/orbitron_semibold"
                tools:text="+39"/>

        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/white"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:id="@+id/next_track_btn"
            android:textAllCaps="true"
            android:text="Prochaine course"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:background="@drawable/rounded_bg"
            android:backgroundTint="?android:colorAccent"
            tools:targetApi="n_mr1"
            android:layout_marginBottom="15dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Courses jouÃ©es"
        android:id="@+id/played_label"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/current_tracks_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="?android:colorAccent"
        tools:targetApi="n_mr1"
        android:text="Supprimer la war"
        android:id="@+id/delete_war_btn"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"
        android:gravity="center"/>


</LinearLayout>