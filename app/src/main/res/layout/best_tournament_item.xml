<?xml version="1.0" encoding="utf-8"?>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bg"
    android:backgroundTint="@color/white_alphaed"
            android:layout_marginVertical="3dp"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="horizontal">



            <ImageView
                android:id="@+id/trophy"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="12dp"
                tools:src="@drawable/gold"/>

    <View
        android:id="@+id/separator"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_marginVertical="5dp"
        android:background="@color/black" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/orbitron_semibold"
                    android:textSize="16sp"
                    android:textColor="@color/harmonia_dark"
                    tools:text="HR vs OF" />

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/harmonia_dark"
                    android:textSize="13sp"
                    tools:text="18/01/2022 - 21h" />

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_height="wrap_content"
                    tools:text="20 coures - Miroir"
                    android:textSize="13sp"
                    android:textColor="@color/harmonia_dark"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/tm_infos"/>


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:background="@color/black"
                android:layout_marginVertical="5dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_height="wrap_content"
                        android:text="Total: "
                        android:textSize="13sp"
                        android:textColor="@color/harmonia_dark"
                        android:id="@+id/current_tm_tracks"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_height="wrap_content"
                        android:text="Pts/map: "
                        android:textSize="13sp"
                        android:textColor="@color/harmonia_dark"
                        android:id="@+id/current_tm_ratio"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_height="wrap_content"
                        android:text="Podiums: "
                        android:textSize="13sp"
                        android:textColor="@color/harmonia_dark"
                        android:id="@+id/current_tm_top"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/harmonia_dark"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:autoSizeTextType="uniform"
                        android:textSize="14sp"
                        android:fontFamily="@font/orbitron_semibold"
                        tools:text="133"
                        android:id="@+id/total_score_tv"
                        tools:targetApi="o" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/harmonia_dark"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/orbitron_semibold"
                        tools:text="16"
                        android:id="@+id/ratio_score_tv" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/harmonia_dark"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/orbitron_semibold"
                        tools:text="8"
                        android:id="@+id/top_score_tv" />

                </LinearLayout>


            </LinearLayout>




    </LinearLayout>





