<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/s_lectionnez_les_six_joueurs_de_votre_quipe"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/harmonia_dark"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/players_rv"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@color/white"/>


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/official"
        android:text="@string/war_officielle"
        android:textColor="@color/harmonia_dark"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:layout_gravity="center"/>


    <TextView
        android:id="@+id/start_war_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_marginVertical="15dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="@string/d_marrer_la_war"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        tools:targetApi="n_mr1" />


</LinearLayout>