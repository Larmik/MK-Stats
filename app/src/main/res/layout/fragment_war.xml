<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="15dp"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/no_team_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Vous n'avez encore aucune équipe. Pour pouvoir participer aux tournois, commencez par rentrer le code de votre équipe."
                    android:gravity="center"
                    android:layout_gravity="bottom"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/rounded_bg"
                    android:layout_marginVertical="35dp"
                    android:id="@+id/team_code_et"
                    android:textColor="@color/black"
                    android:textColorHint="@color/boo"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:backgroundTint="@color/white_alphaed"
                    android:layout_marginHorizontal="40dp" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:background="@drawable/rounded_bg"
                android:backgroundTint="?android:colorAccent"
                tools:targetApi="n_mr1"
                android:textColor="@color/text_color"
                android:id="@+id/next_btn"
                android:textSize="18sp"
                android:visibility="invisible"
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_gravity="bottom"/>



        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:visibility="gone"
                android:id="@+id/progress"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/main_war_layout"
                android:visibility="gone"
                tools:visibility="visible"
                tools:background="@color/harmonia_clear"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:id="@+id/current_team_tv"
                    tools:text="Harmonia"
                    android:gravity="center"
                    android:textColor="@color/harmonia_dark"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/montserrat_bold"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:id="@+id/current_war_layout">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/harmonia_dark"
                            android:fontFamily="@font/montserrat_bold"
                            android:textSize="16sp"
                            android:text="War en cours :"/>

                        <LinearLayout
                            android:id="@+id/current_war_card"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@drawable/rounded_bg"
                            android:backgroundTint="?android:colorAccent"
                            tools:targetApi="n_mr1"
                            android:layout_marginVertical="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/name_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/orbitron_semibold"
                                        android:textSize="16sp"
                                        android:textColor="@color/text_color"
                                        tools:text="HR vs OF" />

                                    <TextView
                                        android:id="@+id/time_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:textColor="@color/text_color"
                                        android:textSize="13sp"
                                        tools:text="18/01/2022 - 21h" />

                                </LinearLayout>


                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/white_alphaed"
                                    android:layout_marginVertical="5dp"/>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="3"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:textColor="@color/text_color"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_regular"
                                        tools:text="Courses jouées: 8/20"
                                        android:id="@+id/current_war_remaining" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:textColor="@color/text_color"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_regular"
                                        tools:text="Points : 96"
                                        android:id="@+id/current_war_score" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white_alphaed"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:paddingTop="10dp"
                        android:id="@+id/create_war_layout">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginBottom="5dp"
                            android:text="Votre équipe ne joue actuellement aucune war."
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="14sp"
                            android:textColor="@color/harmonia_dark" />
                        <TextView
                            android:id="@+id/war_host_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Soyez l'hôte d'une war en démarrant une session ci-dessous."
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="14sp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/harmonia_dark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="10dp"
                            android:background="@drawable/rounded_bg"
                            android:backgroundTint="?android:colorAccent"
                            tools:targetApi="n_mr1"
                            android:textColor="@color/text_color"
                            android:id="@+id/create_war_btn"
                            android:fontFamily="@font/roboto"
                            android:text="Créer une war"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white"/>



                    </LinearLayout>


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:paddingTop="10dp"
                    android:id="@+id/last_war_layout">

                    <TextView  android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/harmonia_dark"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="16sp"
                        android:text="Dernières wars"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/last_war_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="7dp"
                        android:nestedScrollingEnabled="true"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <TextView
                        android:id="@+id/all_wars_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/text_color"
                        android:textAlignment="center"
                        android:background="@drawable/rounded_bg"
                        android:backgroundTint="?attr/colorAccent"
                        android:fontFamily="@font/roboto"
                        android:text="Voir toutes les wars"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    android:background="@color/white_alphaed"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>