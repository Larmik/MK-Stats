<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/harmonia_clear"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="@string/profil"
            android:textColor="@color/harmonia_dark"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:progressTint="?android:colorAccent"
            tools:targetApi="n_mr1"
            android:layout_below="@id/title"
            android:indeterminate="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="20dp"
            android:orientation="vertical"
            android:id="@+id/main_layout"
            android:visibility="gone"
            android:layout_below="@id/title"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="170dp"
                android:scaleType="fitCenter"
                android:layout_marginVertical="15dp"
                android:background="@drawable/circle_bg"
                android:layout_height="170dp"
                android:contentDescription="" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="26sp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/harmonia_dark"
                tools:text="Lari"
                android:layout_height="wrap_content"
                android:id="@+id/username"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="15dp"
                android:background="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/role_team_layout"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/equipe_actuelle"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/harmonia_dark"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        tools:text="Harmonia"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/harmonia_dark"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:id="@+id/team_tv"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/r_le"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/harmonia_dark"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        tools:text="Admin"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/harmonia_dark"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:id="@+id/role_tv"/>


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/adresse_mail"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/harmonia_dark"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    tools:text="lari@harmoniamk.fr"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/harmonia_dark"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/email"/>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="15dp"
                android:background="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/profile_options">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/harmonia_dark"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="16sp"
                    android:id="@+id/change_name_btn"
                    android:paddingVertical="10dp"
                    android:text="@string/changer_mon_pseudo"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/harmonia_dark"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="16sp"
                    android:id="@+id/change_email_btn"
                    android:paddingVertical="10dp"
                    android:text="@string/changer_mon_email"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/harmonia_dark"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="16sp"
                    android:id="@+id/change_password_btn"
                    android:paddingVertical="10dp"
                    android:text="@string/changer_mon_mot_de_passe"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/harmonia_dark"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="16sp"
                    android:id="@+id/change_picture_btn"
                    android:paddingVertical="10dp"
                    android:text="@string/changer_ma_photo_de_profil"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/harmonia_dark"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="16sp"
                    android:id="@+id/leave_team_btn"
                    android:visibility="gone"
                    android:paddingVertical="10dp"
                    android:text="@string/quitter_mon_quipe"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/harmonia_dark"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="16sp"
                    android:id="@+id/disconnect_btn"
                    android:paddingVertical="10dp"
                    android:text="@string/se_d_connecter"/>

            </LinearLayout>



        </LinearLayout>



    </RelativeLayout>

</ScrollView>