<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@color/harmonia_clear"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="200dp"
        android:scaleType="fitXY"
        android:layout_marginVertical="15dp"
        android:src="@mipmap/hr_logo"
        android:background="@drawable/circle_bg"
        android:layout_height="200dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/harmonia_dark"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:id="@+id/username"/>
    <TextView
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/harmonia_dark"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:id="@+id/email"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/harmonia_dark"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="16sp"
        android:id="@+id/change_password_btn"
        android:paddingVertical="15dp"
        android:text="Changer mon mot de passe"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/harmonia_dark"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="16sp"
        android:id="@+id/change_picture_btn"
        android:paddingVertical="15dp"
        android:text="Changer ma photo de profil"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/harmonia_dark"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="16sp"
        android:id="@+id/disconnect_btn"
        android:paddingVertical="15dp"
        android:text="Se dÃ©connecter"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>

</LinearLayout>